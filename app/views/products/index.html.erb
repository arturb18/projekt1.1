<p id="notice"><%= notice %></p>

<div class="row">

  <% @products.each do |product| %>

    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img data-src="holder.js/300x300" alt="...">

          <div class="caption">
            <h3><%= product.name %></h3>

            <p><%= product.description %></p>
            <p><%= product.price %></p>

            <p><a href="#" class="btn btn-primary" role="button"><%= product.price %></a>
              <a href="#" class="btn btn-default" role="button">Dodaj do koszyka</a></p>
          </div>
        </div>
      </div>
  <% end %>

</div>



<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Quality</th>
      <th>Available time</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.quality %></td>
        <td><%= product.available_time %></td>
        <td><%= product.category %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

